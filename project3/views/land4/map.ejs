<html>
<head>
    <title>Map Page - Land 4</title>
    <link href="/style.css" rel="stylesheet">
</head>
<body class="land4">

    <!-- coordinates -->
    <form id="mapForm" action="/land4/map" method="POST" style="display:none">
        <input type="hidden" name="x" id="xCoord">
        <input type="hidden" name="y" id="yCoord">
    </form>

    <!-- images -->
    <% for (let p of allPosts) { %>
        <% if (p.x !== undefined && p.y !== undefined) { %>
            <div class="image" style="position:absolute; left:<%= p.x %>%; top:<%= p.y %>%;">
                <img class="mapped-img" src="<%= p.imgSrc %>">
            </div>
        <% } %>
    <% } %>

